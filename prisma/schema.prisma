generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(cuid())
  clerkId   String @unique
  username  String @unique
  firstName String
  lastName  String
  email     String @unique
  image     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Trip      Trip[]
}

model Trip {
  id     Int     @id @default(autoincrement())
  name   String
  budget String
  userId String
  user   User    @relation(fields: [userId], references: [id])
  days   Day[]
  hotels Hotel[]
}

model Day {
  id         Int        @id @default(autoincrement())
  title      String
  tripId     Int
  trip       Trip       @relation(fields: [tripId], references: [id])
  activities Activity[]
}

model Activity {
  id          Int     @id @default(autoincrement())
  time        String
  activity    String
  image       String?
  description String?
  duration    String?
  dayId       Int
  day         Day     @relation(fields: [dayId], references: [id])
}

model Hotel {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  price   String
  image   String
  tripId  Int
  trip    Trip   @relation(fields: [tripId], references: [id])
}
